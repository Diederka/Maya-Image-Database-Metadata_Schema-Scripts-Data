#!/bin/bash -e

# set the ConedaKOR install directory
export KOR_ROOT="/home/kor/kor"

# set the directory for backups (snapshots)
export BACKUP_DIRECTORY="/home/kor/backups"

# set the mysql password (asuming user "kor" and db name "kor")
export MYSQL_PASSWORD="secret"

# activates simulation mode, e.g. a dry-run
export SIMULATION="true"

# deactivate the actual import of entities in case the second part of the
# script has to run again by itself
export DO_ENTITIES="true"

# directly with images (no trailing slash)
export IMAGES_DIR="/home/kor/SHARED/webdav/images"

# csv file
export CSV_FILE="/home/kor/SHARED/webdav/data.csv"